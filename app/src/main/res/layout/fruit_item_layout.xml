<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ic_item_bg">

    <ImageView
        android:id="@+id/fruit_imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="4dp"
        android:background="@drawable/ic_round_bg"
        android:src="@drawable/ic_banana"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"
        />
    
    <TextView
        android:id="@+id/fruitname_textview"
        android:fontFamily="@font/bubble_gum"
        android:layout_width="0dp"
        tools:text="Watermelon"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/fruit_imageview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>